<%- include('header')%>

<div class="container">
    <h2>Thêm mới sản phẩm</h2>

    <form action method="post" role="form" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-9">

                <div class="form-group">
                    <label for>Tên sản phẩm</label>
                    <input type="text" name="name" class="form-control" id
                        placeholder="Thêm danh mục">
                </div>

                <div class="form-group">
                    <label for>Imge</label>
                    <input type="file" name="image"
                        onchange="onChangeFile(this)">
                    <img src alt id="show_image" style="width: 20%;">
                </div>

                <div class="form-group">
                    <label for>description</label>
                    <textarea name="description" class="form-control"
                        id="description" value> </textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <label for>Tên danh mục</label>

                    <select name="category_id" class="form-control">
                        <option value>Chọn một</option>
                        <% cats.forEach((item, key) => { %>
                        <option value="<%= item.id %>"> <%= item.name
                            %></option>
                        <% }) %>

                    </select>

                </div>
                <div class="form-group">
                    <label for>Price</label>
                    <input type="text" name="price" class="form-control" id
                        value>
                </div>
                <div class="form-group">
                    <label for>Sale_Price</label>
                    <input type="text" name="sale_price" class="form-control" id
                        value>
                </div>

                <div class="form-group">
                    <label for>Trạng thái sản phẩm</label>
                    <div class="radio">
                        <label>
                            <input type="radio" name="status" id="input"
                                value="1">
                            Hiển thị
                        </label>
                    </div>

                    <div class="radio">
                        <label>
                            <input type="radio" name="status" id="input"
                                value="0">
                            Tạm ẩn
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<%- include('footer')%>
<script>
     $('#description').summernote({
        height: 150
    });
    function onChangeFile(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#show_image').attr('src', e.target.result);
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>